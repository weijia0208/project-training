.container{
    background:#fff;
}

.ar_cont{
    width:90%;
    padding:0rpx 60rpx;
    font-size:30rpx;
    background: #fff;
    margin-top: 10rpx;
    margin-bottom:40rpx;
    line-height: 45rpx;
    color:#666666;
}
.ar_cont .ar_cont_h1,
.ar_cont .ar_cont_price{
    font-size: 32rpx;
    font-weight: 600;
    line-height: 64rpx;
    color:#000;
}
.ar_cont .ar_cont_price{
    color: #e64340;
    margin-left:60rpx;
    float:right;
}
.ar_line{
    width:100%;
    height:1rpx;
    content: '';
    background: #ddd;
    margin:20rpx 0rpx;
}

.ar_coverpath{
    width:100%;
    margin:0;
    box-sizing:border-box;
}
.ar_coverpath image{
    margin-left: 5%;
    width:90%;
    height:390rpx;
}

.btn{
    width:90%;
    background:#2aaf74;
    font-size: 32rpx;
    color:#fff;
    border-radius: 0rpx;
    margin:40rpx 0rpx 10rpx;
}