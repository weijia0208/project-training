        function del(id){
            fetch('http://192.168.179.144:3000/part-time', {
            method: 'delete',
            headers: {'Content-Type': 'application/x-www-form-urlencoded'},
            body:'item=' + id
            });
            showData(id);
        }
        function showData(na){
            var tr = document.getElementById(na);
            tr.parentNode.removeChild(tr);
        }
        function change(){
            layer.open({
                    type: 2,
                    title: '添加兼职招聘',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['800px' , '520px'],
                    content: 'part-time-add'
            });
        }
        //添加兼职招聘
