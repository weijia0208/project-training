/* pages/add/add.wxss */
.container{
  width:100%;
  padding:0;
  margin:0;
  background-color: #eee;
  font-size:0.8em;
}
.goodslist{
  width:100%;
  margin:0;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.goodslist view{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  border-bottom: 5rpx solid #eee;
  background-color: #fff;
  padding:0 10rpx;
}
.goodslist view text{
  width:35%;
  float:left;
  text-align: left;
}
.title-inp,.price-inp{
  width:60%;
  height:80rpx;
  float:left;
  line-height: 80rpx;
  text-align: right;
  font-size: 0.8em;
  color:#000;
}
.type-radio{
  width:100%;
  float:right;
  background-color: #fff;
}
.radio-group{
  padding-left: 13%;
}

.masterlist{
  width:100%;
  margin:0;
  margin-bottom: 20rpx;
}
.masterlist view{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  border-bottom: 5rpx solid #eee;
  background-color: #fff;
  padding:0 10rpx;
}
.masterlist view text{
  width:35%;
  float:left;
  text-align: left;
}
.people-inp,.phone-inp{
  width:60%;
  height:80rpx;
  float:left;
  line-height: 80rpx;
  text-align: right;
  color:#000;
}

.gooddetail{
  width:100%;
  margin:0;
  margin-bottom: 20rpx;
}
.gooddetail view{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  border-bottom: 5rpx solid #eee;
  background-color: #fff;
  padding:0 10rpx;
}
.gooddetail view text{
  width:35%;
  float:left;
  text-align: left;
}
.detail-txt{
  border-bottom: 0.5px solid #eee;
}
.detail-inp{
  width:100%;
  height:150rpx;
  float:right;
  background-color: #fff;
}

.imgs{
  width:100%;
  height:200px;
  margin:0;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.imgs text{
  width:100%;
  float:left;
  text-align: left;
  height:80rpx;
  line-height:80rpx;
  padding:0 10rpx;
}
imgs button{
  width:100%;

}
.imgs view image{
  width:90%;
  margin-top:15rpx;
}

.btn{
  width:100%;
  background-color: #2aaf74;
  position:fixed;
  bottom:0;
}
